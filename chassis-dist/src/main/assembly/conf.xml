<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>conf</id>
    <formats>
        <format>dir</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <dependencySets>
    </dependencySets>

    <files>
        <!-- copy the application file -->
        <file>
            <source>
                ../chassis-middleware/chassis-middleware-id-generator-server/target/classes/application.yml
            </source>
            <outputDirectory>conf/chassis-middleware-id-generator-server/</outputDirectory>
            <fileMode>0644</fileMode>
        </file>

        <file>
            <source>
                ../chassis-middleware/chassis-middleware-sample-server/target/classes/application.yml
            </source>
            <outputDirectory>conf/chassis-middleware-sample-server/</outputDirectory>
            <fileMode>0644</fileMode>
        </file>
    </files>

    <fileSets>
        <!-- copy the global config file -->

        <fileSet>
            <directory>../chassis-common/chassis-common-spring-web/target/classes/</directory>
            <outputDirectory>conf/global</outputDirectory>
            <fileMode>0644</fileMode>
            <includes>
                <include>*.yml</include>
                <include>*.yaml</include>
                <include>*.xml</include>
            </includes>
            <excludes>
                <exclude>git.properties</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>../chassis-common/chassis-common-spring-data-jdbc/target/classes/</directory>
            <outputDirectory>conf/global</outputDirectory>
            <fileMode>0644</fileMode>
            <includes>
                <include>*.yml</include>
                <include>*.yaml</include>
            </includes>
            <excludes>
                <exclude>git.properties</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>../chassis-common/chassis-common-spring-data-redis/target/classes/</directory>
